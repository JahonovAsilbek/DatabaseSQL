<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".dialogs.AddDialog">

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="O'zgartirish"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <EditText
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/edit_bootcamp_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:hint="Sarlavha"
        android:paddingStart="15dp" />

    <EditText
        android:background="@drawable/edittext_bg"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/edit_bootcamp_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Matni"
        android:paddingStart="15dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:layout_height="50dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/edit_bootcamp_spinner"
            android:dropDownWidth="wrap_content"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="@id/edit_bootcamp_spinner"
            app:layout_constraintTop_toTopOf="@id/edit_bootcamp_spinner"
            app:layout_constraintBottom_toBottomOf="@id/edit_bootcamp_spinner"
            android:src="@drawable/ic_down_arrow"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_edit"
            android:textSize="16sp"
            android:clickable="true"
            android:textColor="#221FCE"
            android:layout_marginEnd="15dp"
            android:text="Bekor qilish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/save"
            android:textSize="16sp"
            android:clickable="true"
            android:textColor="#221FCE"
            android:text="Saqlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>